<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/distanceField"
        android:layout_width="181dp"
        android:layout_height="28dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="119dp"
        android:background="#fff"
        android:hint="Enter a Distance"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/conversionValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/conversionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Converted distance"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/conversionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/conversionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Convert"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="484dp" />

    <Switch
        android:id="@+id/milesSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miles"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="207dp" />

    <Switch
        android:id="@+id/kilometerSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="Kilometers"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/milesSwitch" />

    <TextView
        android:id="@+id/Header"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="54dp"
        android:fontFamily="@font/headland_one"
        android:text="Distance Calculator"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>